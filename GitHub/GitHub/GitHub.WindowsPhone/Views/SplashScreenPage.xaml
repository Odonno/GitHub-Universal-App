<Page x:Name="page"
    x:Class="GitHub.Views.SplashScreenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light" Background="White" Foreground="Black"
    DataContext="{Binding Source={StaticResource Locator}, Path=Login}">

    <Grid x:Name="LayoutRoot">
        <!-- Content -->
        <StackPanel x:Name="ContentRoot" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 120">
            <Image x:Name="image" MaxHeight="200" Source="/Assets/github-logo.png" />
            <ProgressRing IsActive="True" Background="Transparent" Foreground="Black" Width="100" Height="100" />
        </StackPanel>
    </Grid>
</Page>
