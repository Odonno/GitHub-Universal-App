<Page
    x:Class="GitHub.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    Background="White" Foreground="Black"
    NavigationCacheMode="Required" RequestedTheme="Light">


    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panneau Titre -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image MaxHeight="100" Width="50" Source="/Assets/github-logo.png" Margin="12 -6.5 0 6.5" />
            <TextBlock Text="github" Margin="12 -6.5 0 26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="1,1">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </StackPanel>

        <!--TODO: le contenu doit être placé dans la grille suivante-->
        <Grid Grid.Row="1" x:Name="ContentRoot">
            <Hub>
                <HubSection x:Name="profileSection" Header="me" DataContext="{Binding Path=ProfileViewModel}">
                    <DataTemplate>
                        <Grid DataContext="{Binding Path=CurrentUser, Mode=OneWay}">
                            <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="{Binding Path=AvatarUrl}"/>
                            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Path=Login}" VerticalAlignment="Top"/>
                        </Grid>
                    </DataTemplate>
                </HubSection>
                <HubSection x:Name="activitiesSection" Header="activities" DataContext="{Binding Path=ActivitiesViewModel}">
                    <DataTemplate>
                        <ListView ItemsSource="{Binding Path=Activities}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0 6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="5*" />
                                        </Grid.ColumnDefinitions>

                                        <Image  Grid.Column="0" Source="{Binding Actor.AvatarUrl}" />

                                        <StackPanel Grid.Column="1" Margin="12 0 0 0">
                                            <RichTextBlock>
                                               <Paragraph FontSize="16">
                                                    <Run Text="{Binding Path=Actor.Login}" Foreground="{StaticResource GreyBlue}" />
                                                    <Run Text="{Binding Path=Type, Converter={StaticResource EventStringToTextStringConverter}}" />
                                                    <Run Text="{Binding Path=Repo.Name}" Foreground="{StaticResource GreyBlue}" />
                                                </Paragraph>
                                            </RichTextBlock>

                                            <TextBlock Text="{Binding Path=CreatedAt, Converter={StaticResource DateTimeOffsetToTimeAgoConverter}}"  Foreground="Gray"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DataTemplate>
                </HubSection>
                <HubSection x:Name="reposSection" Header="repositories" DataContext="{Binding Path=ReposViewModel}">
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Visibility="{Binding Source={StaticResource Locator}, Path=Main.SearchingEnabled, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox TextWrapping="Wrap" PlaceholderText="repo name"
                                             Text="{Binding SearchValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <ListView Grid.Row="1" ItemsSource="{Binding Path=Repositories}" 
                                      IncrementalLoadingTrigger="Edge" IncrementalLoadingThreshold="2">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0 3" Background="{StaticResource GreyBlue}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="6*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0" MaxHeight="30" Margin="12" Source="/Assets/icons/download_icon.png" />

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" FontSize="20" Foreground="White" />
                                                <TextBlock Text="{Binding FullName}" FontSize="10" Foreground="LightGray" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>
                    </DataTemplate>
                </HubSection>
                <HubSection x:Name="usersSection" Header="users" DataContext="{Binding Path=UsersViewModel}">
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Visibility="{Binding Source={StaticResource Locator}, Path=Main.SearchingEnabled, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox TextWrapping="Wrap" PlaceholderText="username"
                                             Text="{Binding SearchValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <ListView Grid.Row="1" ItemsSource="{Binding Users}" 
                                      IncrementalLoadingTrigger="Edge" IncrementalLoadingThreshold="2">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0 6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="4*" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0" Source="{Binding AvatarUrl}" />

                                            <TextBlock Grid.Column="1" Text="{Binding Login}" FontSize="24" Margin="12 0 0 0" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </DataTemplate>
                </HubSection>
            </Hub>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Refresh" Label="refresh" Command="{Binding RefreshCommand}"/>
                <AppBarToggleButton Icon="Find" Label="search" Command="{Binding ToggleEnableSearchCommand}" IsChecked="False"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
